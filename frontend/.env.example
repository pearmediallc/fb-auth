# Meta OAuth Configuration (Public - Safe for client)
NEXT_PUBLIC_META_APP_ID=your_meta_app_id
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_OAUTH_REDIRECT_URI=https://your-app.vercel.app/api/auth/callback

# Meta OAuth Secret (Private - Server only)
META_APP_SECRET=your_meta_app_secret

# Database Configuration
DATABASE_URL=postgres://user:password@host:5432/database?sslmode=require

# For Vercel Postgres (Alternative to DATABASE_URL)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Session Configuration
SESSION_SECRET=your_32_character_session_secret_here

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here